<div class="modal fade" id="editPembagianDosen<%= id %>" tabindex="-1" role="dialog" aria-labelledby="editPembagianDosenLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/dosen/riwayat/proposal/edit/<%= id %>" method="post">
                <div class="modal-header">
                    <h4>Data Riwayat Seminar Proposal</h4>
                </div>
                <div class="modal-body container">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="npm">NPM</label>
                                <input class="form-control w-25" type="number" name="npm" id="npm" value="<%= npm %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="nama">Nama</label>
                                <input class="form-control w-25" type="text" name="nama" id="nama" value="<%= nama %>" disabled>
                            </div>
                        <div class="form-group">
                            <label for="judul">Judul</label>
                            <input class="form-control w-25" type="text" name="judul" id="judul" value="<%= judul %>" disabled>
                            <br>
                            <div class="form-group">
                                <label for="dosenPembimbing1">Dosen Pembimbing 1:</label>
                                <span><%= dosenPembimbing1 %></span>
                            <div class="form-group">
                                <label for="dosenPembimbing2">Dosen Pembimbing 2:</label>
                                <span><%= dosenPembimbing2 %></span>
                                
                            <div class="form-group">
                                <label for="dosenPembahas">Dosen Pembahas:</label>
                                <span><%= dosenPembahas %></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="jadwalSeminarProposal">Jadwal Seminar Proposal</label>
                            <input class="form-control" type="datetime-local" name="jadwalSeminarProposal" id="jadwalSeminarProposal"value="<%= jadwalSeminarProposal ? new Date(jadwalSeminarProposal).toLocaleString('sv', { timeZone: 'Asia/Jakarta' }).slice(0, 16) : '' %>" disabled>
                            <br>
                        </div>
                        </div>                                                       
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary1">Kembali</button>
                </div>
            </form>
        </div>
    </div>
</div>



<link rel="stylesheet" type="text/css" href="/public/css/style.css">

<style>
    /* Style for 'Ditolak' option */
    select#statusPermintaanBimbingan option[value="Ditolak"] {
        background-color: red;
        color: white;
    }

    /* Style for 'Pending' option */
    select#statusPermintaanBimbingan option[value="Pending"] {
        background-color: green;
        color: white;
    }

    /* Style for 'Diterima' option */
    select#statusPermintaanBimbingan option[value="Diterima"] {
        background-color: blue;
        color: white;
    }
</style>










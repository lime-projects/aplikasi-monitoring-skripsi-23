<div class="modal fade" id="revisiPb1" tabindex="-1" role="dialog" aria-labelledby="revisiPb1Label" aria-hidden="true">
  <div class="modal-dialog modal-lg">
      <div class="modal-content">
          <form action="/mahasiswa/komprehensif-revisi" method="post" enctype="multipart/form-data">
              <div class="modal-header">
                  <h4>Upload Revisi Bimbingan Komprehensif</h4>
              </div>
              <div class="modal-body container">
                  <div class="row">
                      <div class="col">
                          <div class="form-group">
                            <label for="komprehensif">Revisi bimbingan komprehensif dengan dosen pembimbing 1</label>
                              <% if (komprehensif.komprehensifRevisi1) { %>
                                  <input class="form-control" type="text" id="komprehensifRevisi1" value="<%= komprehensif.komprehensifRevisi1 %>" disabled>
                                  <br style="margin-top: 10px;">
                                  <a href="/mahasiswa/komprehensif-revisi/download/<%= komprehensif.id %>" download="<%= komprehensif.komprehensifRevisi1.split('/').pop() %>" class="btn btn-primary">Unduh Revisi Komprehensif</a>
                                  <br><br>
                                  <input class="form-control-file" type="file" accept="*/*" 
                                  name="komprehensifRevisi1" id="komprehensifRevisi1" required>
                                <% } else { %>
                                  <input class="form-control-file" type="file" accept="*/*" name="komprehensifRevisi1" id="komprehensifRevisi1" required>
                                <% } %>
                              </div>
                            <div class="form-group">
                              <label for="tanggalRevisiMahasiswa1Komprehensif">Tanggal Mahasiswa Revisi</label>
                              <input class="form-control" type="datetime-local" name="tanggalRevisiMahasiswa1Komprehensif" id="tanggalRevisiMahasiswa1Komprehensif" value="<%= komprehensif.tanggalRevisiMahasiswa1Komprehensif ? new Date(komprehensif.tanggalRevisiMahasiswa1Komprehensif).toLocaleString('sv', { timeZone: 'Asia/Jakarta' }).slice(0, 16) : '' %>" required>
                      </div>
                  </div>
              </div>
              <div style="color: red; margin-left: 5px;">Anda dapat mengupload komprehensif yang telah diperbaharui.</div>
              <div class="modal-footer">
                  <button type="submit" class="btn" style="background-color: #325662; color: #FFF;">Kirim</button>
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
              </div>
              </div>
          </form>
      </div>
  </div>
</div>

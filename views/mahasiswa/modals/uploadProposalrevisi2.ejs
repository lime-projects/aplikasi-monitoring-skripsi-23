<div class="modal fade" id="revisiPb2" tabindex="-1" role="dialog" aria-labelledby="revisiPb2Label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/mahasiswa/proposal-revisi2" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4>Upload Revisi Proposal</h4>
                </div>
                <div class="modal-body container">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                              <label for="proposalRevisi2">Revisi Proposal Bimbingan dengan Dosen pembimbing 2</label>
                              <% if (proposal.proposalRevisi2) { %>
                                <input class="form-control" type="text" id="proposalRevisi1" value="<%= proposal.proposalRevisi2 %>" disabled>
                                <br style="margin-top: 10px;">
                                <a href="/mahasiswa/proposal-revisi/download/<%= proposal.id %>" download="<%= proposal.proposalRevisi2.split('/').pop() %>" class="btn btn-primary">Unduh Revisi Proposal</a>
                                <br><br>
                                <input class="form-control-file" type="file" accept="*/*" name="proposalRevisi2" 
                                id="proposalRevisi2" required>
                              <% } else { %>
                                <input class="form-control-file" type="file" accept="*/*" name="proposalRevisi2" id="proposalRevisi2" required>
                              <% } %>
                            </div>
                          <div class="form-group">
                            <label for="tanggalRevisiMahasiswa2">Tanggal Mahasiswa Revisi</label>
                            <input class="form-control" type="datetime-local" name="tanggalRevisiMahasiswa2" id="tanggalRevisiMahasiswa2" value="<%= proposal.tanggalRevisiMahasiswa2 ? new Date(proposal.tanggalRevisiMahasiswa2).toLocaleString('sv', { timeZone: 'Asia/Jakarta' }).slice(0, 16) : '' %>" required>

                        </div>
                    </div>
                </div>
                <div style="color: red; margin-left: 5px;">Anda dapat mengupload proposal yang telah diperbaharui.</div>
                <div class="modal-footer">
                    <button type="submit" class="btn" style="background-color: #325662; color: #FFF;">Kirim</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                </div>
                </div>
            </form>
        </div>
    </div>
  </div>
  
<div class="modal fade" id="editMahasiswa<%= id %>" tabindex="-1" role="dialog" aria-labelledby="editMahasiswaLabel" aria-hidden="true" data-id="<%= id %>">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/admin/mahasiswa/edit/<%= id %>" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4>Edit Mahasiswa</h4>
                </div>
                <div class="modal-body container">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="nip">NPM</label>
                                <input class="form-control" type="number" name="npm" id="npm" value="<%= npm %>" required>
                            </div>
                            <div class="form-group">
                                <label for="nama">Nama</label>
                                <input class="form-control" type="text" name="nama" id="nama" value="<%= nama %>" required>
                            </div>
                            <label for="gender">Gender</label>
                            <select class="form-control" name="gender" id="gender" value="<%= gender %>" required>
                                <option value="<%= gender %>" selected disabled><%= gender %></option>
                                <option value="Laki-laki">Laki-Laki</option>
                                <option value="Perempuan">Perempuan</option>
                            </select>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="angkatan">Angkatan</label>
                                <select class="form-control" name="angkatan" id="angkatan" required>
                                    <option value="<%= angkatan %>" selected disabled><%= angkatan %></option>
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                    <option value="2026">2026</option>
                                    <option value="2027">2027</option>
                                    <option value="2028">2028</option>
                                    <option value="2029">2029</option>
                                    <option value="2030">2030</option>
                                    <option value="2031">2031</option>
                                    <option value="2032">2032</option>
                                    <option value="2032">2032</option>
                                    <option value="2033">3033</option>
                                    <option value="2034">2034</option>
                                    <option value="2035">2035</option>
                                    <option value="2036">2036</option>
                                    <option value="2037">2037</option>
                                    <option value="2038">2038</option>
                                    <option value="2039">2039</option>
                                    <option value="2040">2040</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="foto">Foto</label>
                                <br>
                                <% if (foto) { %>
                                    <img src="/uploads/<%= id %>/<%= foto %>" class="mt-2 img-thumbnail" id="mahasiswa-foto">
                                <% } else { %>
                                    <img src="/uploads/default.png" class="mt-2 img-thumbnail" id="mahasiswa-foto">
                                <% } %>                                    
                                <br>
                                <br>
                                <input class="form-control-file" type="file" accept="image/jpeg, image/png, image/jpg" name="foto" id="foto">
                                <% console.log(foto) %>
                            </div>                            
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn" style="background-color: #325662; color: #FFF;">Ubah</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                </div>                
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="/public/css/style.css">

<script>
    document.getElementById('foto').addEventListener('change', function(e) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('mahasiswa-foto').src = e.target.result;
        };
        reader.readAsDataURL(e.target.files[0]);
    });
    </script>



    
<div class="modal fade" id="editPembagianDosen<%= id %>" tabindex="-1" role="dialog" aria-labelledby="editPembagianDosenLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/koordinator-skripsi/pembagian-dosen/edit/<%= id %>" method="post">
                <div class="modal-header">
                    <h4>Edit Pembagian Dosen</h4>
                </div>
                <div class="modal-body container">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="npm">NPM</label>
                                <input class="form-control w-25" type="number" name="npm" id="npm" value="<%= npm %>" required>
                            </div>
                            <div class="form-group">
                                <label for="nama">Nama</label>
                                <input class="form-control w-25" type="text" name="nama" id="nama" value="<%= nama %>" required>
                            </div>
                            <label for="statusPembimbing1">Status Pembimbing 1</label>
                            <div class="form-select">
                            <select name="statusPembimbing1" id="statusPembimbing1">
                                <option value="Ditolak" class="bg-red text-white">Ditolak</option>
                                <option value="Pending" class="bg-green text-white">Pending</option>
                                <option value="Diterima" class="bg-blue text-white">Diterima</option>
                            </select>
                            </div>
                            <br>
                            <label for="statusPembimbing2">Status Pembimbing 2</label>
                            <div class="form-select">
                            <select name="statusPembimbing2" id="statusPembimbing2">
                                <option value="Ditolak" class="bg-red text-white">Ditolak</option>
                                <option value="Pending" class="bg-green text-white">Pending</option>
                                <option value="Diterima" class="bg-blue text-white">Diterima</option>
                            </select>
                            </div>
                            <br>
                            <label for="statusPembahas">Status Pembahas</label>
                            <div class="form-select">
                            <select name="statusPembahas" id="statusPembahas">
                                <option value="Ditolak" class="bg-red text-white">Ditolak</option>
                                <option value="Pending" class="bg-green text-white">Pending</option>
                                <option value="Diterima" class="bg-blue text-white">Diterima</option>
                            </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary1">Ubah</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                </div>
            </form>
        </div>
    </div>
</div>



<link rel="stylesheet" type="text/css" href="/public/css/style.css">

<style>
    /* Style for 'Ditolak' option */
    select#statusPembimbing1 option[value="Ditolak"],
    select#statusPembimbing2 option[value="Ditolak"],
    select#statusPembahas option[value="Ditolak"] {
        background-color: red;
        color: white;
    }

    /* Style for 'Pending' option */
    select#statusPembimbing1 option[value="Pending"],
    select#statusPembimbing2 option[value="Pending"],
    select#statusPembahas option[value="Pending"] {
        background-color: green;
        color: white;
    }

    /* Style for 'Diterima' option */
    select#statusPembimbing1 option[value="Diterima"],
    select#statusPembimbing2 option[value="Diterima"],
    select#statusPembahas option[value="Diterima"] {
        background-color: blue;
        color: white;
    }
</style>









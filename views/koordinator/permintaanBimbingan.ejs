<%- include('../layouts/header') %>
<div id="wrapper">
    <%- include('./sidebarKoor') %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Navbar Koor -->
            <%- include('../layouts/navbarTopKoor', { id, username }) %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->


                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
                </div>

                <% if (addSuccess1.length !== 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong><%= addSuccess1 %></strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                <% if (editSuccess.length !== 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong><%= editSuccess %></strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>

                <!-- Content Row -->

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold" style="color: #325662;">Data Pembagian Dosen</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="dt-buttons" style="display: flex; gap: 10px;">
                                <form action="/koordinator-skripsi/copy-permintaanBimbingan" method="POST">
                                    <button type="submit" name="export" value="excel" class="btn" style="background-color: #325662; color: #FFF;">
                                        <i></i> Copy
                                    </button>
                                </form>
                                <form action="/koordinator-skripsi/csv-permintaanBimbingan" method="POST">
                                    <button type="submit" name="export" value="excel" class="btn" style="background-color: #325662; color: #FFF;">
                                        <i></i> CSV
                                    </button>
                                </form>
                                <form action="/koordinator-skripsi/excel-permintaanBimbingan" method="POST">
                                    <button type="submit" name="export" value="excel" class="btn" style="background-color: #325662; color: #FFF;">
                                        <i></i> Excel
                                    </button>
                                </form>
                                <form action="/koordinator-skripsi/pdf-permintaanBimbingan" method="POST">
                                    <button type="submit" name="export" value="pdf" class="btn" 
                                    style="background-color: #325662; color: #FFF;">
                                        <i></i> PDF
                                    </button>
                                </form>
                                <!-- <form action="/admin/print" method="POST"> -->
                                    <!-- <button type="submit" name="export" value="pdf" class="btn"  -->
                                    <!-- style="background-color: #325662; color: #FFF;"> -->
                                        <!-- <i></i> Print -->
                                    <!-- </button> -->
                                <!-- </form> -->
                            </div>                            
                            <br>
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>NPM</th>
                                        <th>Nama</th>
                                        <th>Dosen Pembimbing 1</th>
                                        <th>Dosen Pembimbing 2</th>
                                        <th>Dosen Pembahas</th>
                                        <th>Tanggal Pengajuan</th>
                                        <th>Keterangan</th>
                                        <th>Status</th>
                                        <th style="width: 10%;">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% dataPembagianDosen.map((item, i) => { %>
                                        <tr>
                                            <td><%= i+1 %></td>
                                            <td><%= item.npm %></td>
                                            <td><%= item.nama %></td>
                                            <td id="dosenPembimbing1_<%= item.id %>"><%= item.dosenPembimbing1 %></td>
                                            <td id="dosenPembimbing2_<%= item.id %>"><%= item.dosenPembimbing2 %></td>
                                            <td id="dosenPembahas_<%= item.id %>"><%= item.dosenPembahas %></td>
                                            <td>
                                                <% const timezone = 'Asia/Jakarta' %>
                                                <% const date = new Date(item.tanggalPengajuan); %>
                                                <% const options = {
                                                    timeZone: timezone,
                                                    weekday: 'long',
                                                    day: 'numeric',
                                                    month: 'long',
                                                    year: 'numeric',
                                                }; %>
                                                <% const formattedDate = date.toLocaleDateString('id-ID', options) + '. Pukul ' + date.toLocaleTimeString('id-ID', { hour12: false }) + ' WIB.'; %>
                                                <p><%= formattedDate %></p>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                  <label style="color: blue; font-weight: bold" class="col-form-label">
                                                    Pemberitahuan permintaan bimbingan akan masuk pada halaman masing-masing dosen yang diajukan mahasiswa
                                                  </label>
                                                </div>
                                              </td>                                              
                                            <td id="statusPermintaanBimbingan_<%= item.id %>" style="font-weight: bold;">
                                                <span class="<%= warna4[item.id] %>">
                                                    <% if (item.statusPermintaanBimbingan) { %>
                                                        <%= item.statusPermintaanBimbingan %>
                                                    <% } else { %>
                                                        <span style="color: orange;">Menunggu Persetujuan</span>
                                                    <% } %>
                                                </span>
                                            </td>                                            
                                            <td>
                                                <div style="display: flex; justify-content: center;">
                                                <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#editPembagianDosen<%= item.id %>">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <%- include('../koordinator/modals/editPermintaanBimbingan', { 
                                                    id: item.id, 
                                                    npm: item.npm, 
                                                    nama: item.nama,
                                                    dosenPembimbing1: item.dosenPembimbing1,
                                                    dosenPembimbing2: item.dosenPembimbing2,
                                                    dosenPembahas: item.dosenPembahas
                                                }) %>
                                            </td>                                            
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <%- include('../layouts/footer') %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $('[data-toggle="modal"][data-target="#editP1Modal"]').click(function() {
        const id = $(this).data('mahasiswa-id');
        const updatedP1Info = {
            dosenPembimbing1: $('#dosenPembimbing1Input').val(),
        };
        $.ajax({
            method: 'PUT',
            url: `/admin/pembagian-dosen/editDosen/${id}`,
            data: updatedP1Info,
            success: function(response) {
                console.log(response);
                $(`#dosenPembimbing1_${id}`).text(updatedP1Info.dosenPembimbing1);
                $('#editP1Modal').modal('hide');
            },
            error: function(error) {
                console.error(error);
            }
        });
    });
</script>